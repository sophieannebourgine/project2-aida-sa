<div class="cart-container">
    {{#unless foods}}
    <div class="square"> </div>

    <span class="empty-cart"> You have never added <br>any product yet.<br><br> Let's check <br>all the products!
        <div class="button">
            <a href="/products/all"> <button class="button-view">View products</button></div></a>
    </span>

</div>
{{/unless}}
