<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Welcome Back !</h1>
    <p class="form-subtitle">Enjoy yourself and be comfortable </p>
  </header>

  <form method="post" action="/auth/signin" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" type="email" class="input-text input" name="email" value="hello@ironsnack.com"
        placeholder="example@gmail.com" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" type="password" name="password" class="input-text input" value="12345" placeholder="••••••"
        required>
      {{#if msg}}
      <p class="message {{msg.status}}">{{msg.text}}</p>
      {{/if}}
    </div>
    <button class="button-primary white">Log in !</button>
  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/auth/signup" class="button-link-form">Sign Up</a></p>
</section>